<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        android:text="ok"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="⬆️"
        app:layout_constraintBottom_toTopOf="@+id/ok"
        app:layout_constraintLeft_toLeftOf="@+id/ok"
        app:layout_constraintRight_toRightOf="@+id/ok" />

    <Button
        android:id="@+id/down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="⬇️"
        app:layout_constraintLeft_toLeftOf="@+id/ok"
        app:layout_constraintRight_toRightOf="@+id/ok"
        app:layout_constraintTop_toBottomOf="@+id/ok" />

    <Button
        android:id="@+id/left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="⬅️"
        app:layout_constraintBottom_toBottomOf="@+id/ok"
        app:layout_constraintRight_toLeftOf="@+id/ok"
        app:layout_constraintTop_toTopOf="@+id/ok" />

    <Button
        android:id="@+id/right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="➡️"
        app:layout_constraintBottom_toBottomOf="@+id/ok"
        app:layout_constraintLeft_toRightOf="@+id/ok"
        app:layout_constraintTop_toTopOf="@+id/ok" />


    <Button
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="🔙️"
        app:layout_constraintRight_toLeftOf="@id/down"
        app:layout_constraintTop_toBottomOf="@+id/down" />

</androidx.constraintlayout.widget.ConstraintLayout>