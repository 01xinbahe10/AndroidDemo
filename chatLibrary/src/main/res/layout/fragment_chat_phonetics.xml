<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llSoundRecordingTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/viewMIC"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="0:08"
            android:textColor="#7e7e7e"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/viewMIC"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:text="按住说话"
        android:textColor="#7e7e7e"
        android:textSize="16sp" />


    <View
        android:id="@+id/viewMIC"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_chat_click_mic" />

    <View
        android:id="@+id/viewRecorderDelete"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_below="@+id/viewMIC"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:background="@drawable/bg_chat_select_delete" />
</RelativeLayout>